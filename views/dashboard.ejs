<div class="container mx-auto px-6 py-12">
  <!-- Header -->
  <header class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-800">Admin Dashboard</h1>
    <p class="text-gray-500 mt-2 text-lg">Overview of platform activity</p>
  </header>

  <div class="grid gap-10 md:grid-cols-2">
    <!-- Quiz Section -->
    <div class="bg-white rounded-xl shadow-md p-8 hover:shadow-lg transition duration-300">
      <div class="mb-6">
        <h2 class="text-2xl font-semibold text-blue-600 mb-2">Quizzes</h2>
        <p class="text-5xl font-bold text-gray-900"><%= quizzes.length %></p>
        <div class="flex gap-6 mt-2 text-sm text-gray-600">
          <p class="flex items-center gap-2"><span class="w-2 h-2 bg-green-500 rounded-full"></span> Active: <%= activeQuizzes.length %></p>
          <p class="flex items-center gap-2"><span class="w-2 h-2 bg-red-500 rounded-full"></span> Inactive: <%= inactiveQuizzes.length %></p>
        </div>
      </div>
      <div class="space-y-3 pt-4">
        <a href="/admin/create-quiz" class="block w-full text-center bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition">Create Quiz</a>
        <a href="/quiz-section" class="block w-full text-center bg-gray-200 text-gray-700 py-3 rounded-lg hover:bg-gray-300 transition">View All Quizzes</a>
      </div>
    </div>

          <!-- User Section -->
    <div class="bg-white rounded-xl shadow-md p-8 hover:shadow-lg transition duration-300">
      <div class="mb-6">
        <h2 class="text-2xl font-semibold text-green-600 mb-2">Users</h2>
        <p class="text-5xl font-bold text-gray-900"><%= users.length %></p>
        <p class="text-sm text-gray-600 mt-2">Total registered users</p>
      </div>
      <div class="pt-4">
        <a href="/admin/users" class="block w-full text-center bg-green-500 text-white py-3 rounded-lg hover:bg-green-600 transition">View All Users</a>
      </div>
    </div>
  </div>
</div>
