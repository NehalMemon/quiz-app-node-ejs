<div class="max-w-5xl mx-auto px-6 py-10">
  <!-- Header - Maintains your exact original styling -->
  <div class="bg-white shadow-md rounded-lg p-8 mb-6 relative">
    <% if (admin) { %>
      <div class="absolute top-4 right-4 flex gap-2">
        <form action="/admin/quiz/<%= quiz._id %>/activation" method="POST">
          <button type="submit"
                  class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded text-sm shadow">
            <%= quiz.isActive ? "Deactivate" : "Activate" %>
          </button>
        </form>
        <a href="/admin/quiz/<%= quiz._id %>/edit" 
           class="bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded text-sm shadow">
          ‚úèÔ∏è Edit
        </a>
        <form action="/admin/quiz/<%= quiz._id %>/delete" method="POST"
              onsubmit="return confirm('Are you sure you want to delete this quiz?');">
          <button type="submit"
                  class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded text-sm shadow">
            üóëÔ∏è Delete
          </button>
        </form>
      </div>
    <% } %>

    <h1 class="text-3xl font-bold text-blue-700 mb-4"><%= quiz.title %></h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-2">
      <div class="flex items-center">
        <span class="font-medium text-gray-700 mr-2">Subject:</span>
        <span class="text-gray-900"><%= quiz.subject %></span>
      </div>
      <% if (quiz.module) { %>
        <div class="flex items-center">
          <span class="font-medium text-gray-700 mr-2">Module:</span>
          <span class="text-gray-900"><%= quiz.module.name %></span>
        </div>
      <% } %>
      <% if (quiz.level) { %>
        <div class="flex items-center">
          <span class="font-medium text-gray-700 mr-2">Year:</span>
          <span class="text-gray-900">
            <%= quiz.level.name === 1 ? "1st Year" : 
                quiz.level.name === 2 ? "2nd Year" : 
                quiz.level.name === 3 ? "3rd Year" : 
                quiz.level.name + " Year" %>
          </span>
        </div>
      <% } %>
    </div>
    
    <% if (admin) { %>
      <div class="flex items-center mt-2">
        <span class="font-medium text-gray-700 mr-2">Created:</span>
        <span class="text-gray-900"><%= new Date(quiz.createdAt).toLocaleDateString() %></span>
      </div>
    <% } %>
    <% if (!quiz.isActive) { %>
      <div class="mt-2">
        <span class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium">Inactive</span>
      </div>
    <% } %>
  </div>

  <!-- Questions Table - Maintains your preferred table-like structure -->
  <div class="space-y-6">
    <% quiz.questions.forEach((q, index) => { %>
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-start mb-4">
          <h2 class="text-lg font-semibold text-gray-800 p-3">
            <span class="text-blue-600"><%= index + 1 %>.</span> <%= q.questionText %>
          </h2>
          <% if (admin) { %>
            <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
              Correct: <%= q.correctAns %>
            </span>
          <% } %>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <% q.options.forEach((opt, i) => { %>
            <% if (admin) { %>
              <div class="flex items-center p-3  mb-2 gap-2 <%= opt === q.correctAns ? 'bg-green-50 border border-green-200' : 'bg-gray-50' %> rounded-lg">
                <span class="font-medium mr-2 <%= opt === q.correctAns ? 'text-green-700' : 'text-gray-600' %>">
                  <%= String.fromCharCode(65 + i) %>.
                </span>
                <span class="<%= opt === q.correctAns ? 'text-green-800 font-medium mr-2' : 'text-gray-700 mr-2' %>">
                  <%= opt %>
                </span>
              </div>
            <% } else { %>
              <label class="flex items-center p-3 bg-gray-50 hover:bg-gray-100 rounded-lg cursor-pointer transition">
                <input type="radio" name="answers[<%= index %>]" value="<%= opt %>" required 
                       class="h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500 mr-2">
                <div class="flex gap-2 items-center">
                  <span class="font-medium text-gray-600"><%= String.fromCharCode(65 + i) %>.</span>
                  <span class="text-gray-700"><%= opt %></span>
                </div>
              </label>
            <% } %>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Submit Button (for students) -->
  <% if (!admin) { %>
    <div class="mt-8 text-center">
      <button type="submit" 
              class="bg-blue-600 hover:bg-blue-700 text-white py-3 px-8 rounded-lg font-medium shadow-sm transition">
        Submit Answers
      </button>
    </div>
  <% } %>
</div>