<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Profile | MedQuiz</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen font-sans">

  <div class="max-w-4xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6 text-blue-600">Welcome, <%= user.userName %></h1>

    <% if (error) { %>
      <p class="text-red-500 mb-4"><%= error %></p>
    <% } %>
    <% if (success) { %>
      <p class="text-green-500 mb-4"><%= success %></p>
    <% } %>

    <div class="bg-white shadow rounded p-6">
      <h2 class="text-2xl font-semibold mb-4">Quiz Reports</h2>

      <% if (reports.length === 0) { %>
        <p class="text-gray-600">No reports available yet.</p>
      <% } else { %>
        <div class="space-y-4">
          <% reports.forEach(r => { %>
            <div class="border rounded p-4 bg-gray-50">
              <h3 class="text-lg font-bold text-gray-800 mb-1"><%= r.quizTitle %></h3>
              <p class="text-sm text-gray-600"><strong>Date:</strong> <%= new Date(r.date).toLocaleDateString() %></p>
              <p class="text-sm"><strong>Total Questions:</strong> <%= r.totalQuestions %></p>
              <p class="text-sm"><strong>Attempted:</strong> <%= r.attemptedAnswers %></p>
              <p class="text-sm"><strong>Correct:</strong> <%= r.correctAnswers %></p>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </div>

</body>
</html>
