<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Create Quiz | MedQuiz Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800 min-h-screen font-sans">

  <div class="max-w-4xl mx-auto mt-10 bg-white p-8 rounded-xl shadow-md">
    <h1 class="text-3xl font-bold text-center text-blue-600 mb-6">Create New Quiz</h1>

    <% if (typeof error !== 'undefined' && error) { %>
      <p class="text-red-500 text-center mb-4"><%= error %></p>
    <% } %>
    <% if (typeof success !== 'undefined' && success) { %>
      <p class="text-green-500 text-center mb-4"><%= success %></p>
    <% } %>

    <form action="/admin/create-quiz" method="POST" id="quizForm">
      <!-- Quiz Info -->
      <div class="grid grid-cols-1 gap-4 mb-6">
        <div>
          <label class="block mb-1 font-semibold">Quiz Title</label>
          <input type="text" name="title" required class="w-full border border-gray-300 rounded px-4 py-2" />
        </div>
        <div>
          <label class="block mb-1 font-semibold">Subject</label>
          <input type="text" name="subject" required class="w-full border border-gray-300 rounded px-4 py-2" />
        </div>
        <div>
          <label class="block mb-1 font-semibold">Topic</label>
          <input type="text" name="topic" required class="w-full border border-gray-300 rounded px-4 py-2" />
        </div>
      </div>

      <!-- Questions Container -->
      <div id="questionsContainer">
        <!-- Initial Question Block will be inserted here -->
      </div>

      <div class="text-right mt-4">
        <button type="button" onclick="addQuestion()" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">+ Add Question</button>
      </div>

      <div class="text-center mt-6">
        <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition">
          Create Quiz
        </button>
      </div>
    </form>
  </div>

  <script src="../scripts/formScript.js">
  </script>
</body>
</html>
